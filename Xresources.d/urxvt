! Xresources.d/URxvt : URxvt config

! enabled extensions
URxvt.perl-ext-common: default,matcher,font-size

! do not scroll with output
URxvt.scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt.scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt.scrollTtyKeypress: true

! pointer
!URxvt.pointerBlank: true

! cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

! fonts
URxvt.font: \
xft:mononoki Nerd Font Mono-16:style=Regular, \
xft:SauceCodePro Nerd Font Mono-15:style=Medium,Regular, \
xft:FantasqueSansMono Nerd Font Mono-17:style=Regular, \
xft:Ubuntu Mono-16:style=Regular

URxvt.boldFont: \
xft:mononoki Nerd Font Mono-16:style=Bold, \
xft:SauceCodePro Nerd Font Mono-15:style=Bold, \
xft:FantasqueSansMono Nerd Font Mono-17:style=Bold, \
xft:Ubuntu Mono-16:style=Bold

URxvt.italicFont: \
xft:mononoki Nerd Font Mono-16:style=Italic, \
xft:SauceCodePro Nerd Font Mono-15:style=Medium Italic,Italic, \
xft:FantasqueSansMono Nerd Font Mono-17:style=Italic, \
xft:Ubuntu Mono-16:style=Italic

URxvt.boldItalicFont: \
xft:mononoki Nerd Font Mono-16:style=BoldItalic, \
xft:SauceCodePro Nerd Font Mono-15:style=Bold Italic, \
xft:FantasqueSansMono Nerd Font Mono-17:style=Bold Italic, \
xft:Ubuntu Mono-16:style=Bold Italic

! reduce space between characters
URxvt.letterSpace: -1

! use font glyphs 
URxvt*skipBuiltinGlyphs: true

! general settings
URxvt.saveLines: 65536
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.urgentOnBell: True

! disable printing terminal contents with PrtSc
URxvt.print-pipe: "cat 1> /dev/null 2>&1"

! disable ctrl-shift bindings
URxvt.iso14755: false
URxvt.iso14755_52: false

! scroll up/down using shift-up/shift-down
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! clickable URLs
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.underlineURLs:  True
URxvt.matcher.button: 1

! open and list recent URLs via keyboard
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

! bind copy/paste to ctrl-shift-c/ctrl-shift-v
!URxvt.keysym.Shift-Control-V: eval:paste_clipboard
!URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! ctrl + arrow keys match xterm key sequences
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! vim: ft=xdefaults
