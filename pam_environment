#
## ~/.pam_environment : login environment
#


## Default Directories

XDG_CACHE_HOME          DEFAULT=@{HOME}/.cache
XDG_CONFIG_HOME         DEFAULT=@{HOME}/.local/etc
XDG_DATA_HOME           DEFAULT=@{HOME}/.local/share
XDG_RUNTIME_DIR         DEFAULT=@{HOME}/.local/run/user         OVERRIDE=${XDG_RUNTIME_DIR}

XDG_DATA_DIRS           DEFAULT=/usr/local/share:/usr/share     OVERRIDE=${XDG_DATA_DIRS}
XDG_CONFIG_DIRS         DEFAULT=/etc/xdg                        OVERRIDE=${XDG_CONFIG_DIRS}

TMPDIR                  DEFAULT=@{HOME}/.tmp



## Locale

IFS                     DEFAULT=
LANG                    DEFAULT=en_US.UTF-8
LANGUAGE                DEFAULT=en_US
LC_ALL                  DEFAULT=
#LC_COLLATE              DEFAULT=en_US.ISO-8859-1
TZ                      DEFAULT=America/Los_Angeles



## Output Styles

BLOCK_SIZE              DEFAULT=human-readable
QUOTING_STYLE           DEFAULT=shell-escape
TIME_STYLE              DEFAULT="+ %a %_d %b %_I:%M %p "



## Compatibility

VERSION_CONTROL         DEFAULT=existing

POSIXLY_CORRECT         DEFAULT=
#_POSIX2_VERSION         DEFAULT=200809



## GnuPG

GPG_TTY                 DEFAULT=
GNUPGHOME               DEFAULT=${XDG_CONFIG_HOME}/.gnupg

SSH_AGENT_PID           DEFAULT=
SSH_AUTH_SOCK           DEFAULT=${XDG_RUNTIME_DIR}/gnupg/S.gpg-agent.ssh



## Zsh

ZDOTDIR                 DEFAULT=${XDG_CONFIG_HOME}/zsh



## Xinit

XINITRC                 DEFAULT=${XDG_CONFIG_HOME}/xinitrc



## Elinks

ELINKS_CONFDIR          DEFAULT=${XDG_CONFIG_HOME}/elinks



## Less

LESS="-FiMR --no-init --hilite-unread --quotes=`' --silent --window=-2"
SYSTEMD_LESS='

LESSBINFMT              DEFAULT=*d<%02x>
LESSUBINFMT             DEFAULT=<U+%04lx>



## Systemd
#
SYSTEMD_PAGER           DEFAULT=
SYSTEMD_EDITOR          DEFAULT=
SYSTEMD_LESS            DEFAULT=FRSXMK



## Wine

WINEARCH                DEFAULT=win64
WINEPREFIX              DEFAULT=${XDG_DATA_HOME}/wine
WINEDLLPATH             DEFAULT=@{HOME}/.local/lib/wine:@{HOME}/.local/lib64/wine:@{HOME}/.local/lib32/wine:/usr/local/lib/wine:/usr/local/lib64/wine:/usr/local/lib32/wine:/usr/lib/wine:/usr/lib64/wine:/us>WINEPREFIX=@{HOME}/.local/share/wine



## Pacman

AURDEST                 DEFAULT=${XDG_DATA_HOME}/pacman/aur
BUILDDIR                DEFAULT=${TMPDIR}/makepkg/build
LOGDEST                 DEFAULT=${XDG_DATA_HOME}/makepkg/log
PKGDEST                 DEFAULT=${XDG_DATA_HOME}/makepkg/pkg
SRCDEST                 DEFAULT=
SRCPKGDEST              DEFAULT=${XDG_DATA_HOME}/makepkg/srcpkg



## Readline

INPUTRC                 DEFAULT=${XDG_CONFIG_HOME}/inputrc
RLWRAP_HOME             DEFAULT=${XDG_DATA_HOME}/rlwrap



## Luarocks

LUAROCKS_CONFIG         DEFAULT=${XDG_CONFIG_HOME}/luarocks/config.lua



## Python

PYTHONSTARTUP           DEFAULT=${XDG_CONFIG_HOME}/python/rc.py



## NVidia

__GL_FSAA_MODE                DEFAULT=10
__GL_LOG_MAX_ANISO            DEFAULT=4
__GL_SHADER_DISK_CACHE        DEFAULT=1
__GL_SHADER_DISK_CACHE_PATH   DEFAULT=${XDG_CACHE_HOME}/nv/GLCache
__GL_THREADED_OPTIMIZATIONS   DEFAULT=1




