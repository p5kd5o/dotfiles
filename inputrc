"\M-%":          exchange-point-and-mark
"\M-OC":         forward-char
"\M-[C":         forward-char
"\M-\C-OC":     forward-char
"\M-\C-[C":     forward-char
"\C-f":         forward-char
"\M-\M-[C":      shell-forward-word
"\M-[1;5C":      shell-forward-word
"\M-[5C":        shell-forward-word
"\M-f":          forward-word
"\M-g":          glob-complete-word
"\M-*":        glob-expand-word
"\C-g":        glob-list-expansions
"\M-!":          history-expand-line
"\M-*\M-a":          insert-completions
"\M-.":          insert-last-argument
"\M-_":          insert-last-argument
"\C-k":         kill-line
"\M-d":          kill-word
"\C-\\":        kill-whole-line
"\M-OB":         next-history
"\M-[B":         next-history
"\M-\C-OB":     next-history
"\M-\C-[B":     next-history
"\M-\M-[B":      history-search-forward
"\M-[1;5B":      history-search-forward
"\M-[5B":        history-search-forward
"\M-n":          non-incremental-forward-search-history
"\M-p":          non-incremental-reverse-search-history
"\C-o":         operate-and-get-next
"\C-x!":        possible-command-completions
"\M-=":          possible-completions
"\M-?":          possible-completions
"\C-x/":        possible-filename-completions
"\C-x@":        possible-hostname-completions
"\C-x~":        possible-username-completions
"\C-x$":        possible-variable-completions
"\M-OA":         previous-history
"\M-[A":         previous-history
"\M-\C-OA":     previous-history
"\M-\C-[A":     previous-history
"\M-\M-[A":      history-search-backward
"\M-[1;5A":      history-search-backward
"\M-[5A":        history-search-backward
"\C-v":         quoted-insert
"\M-[2~":        quoted-insert
"\C-x\C-r":     re-read-init-file
"\C-r":         reverse-search-history
"\M-\C-r":      revert-line
