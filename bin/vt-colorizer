#!/bin/env sh
## script to configure virtual terminal colors

USAGE="${0##*/}: usage: ${0##*/} file"

[ "$#" -eq 1 ] && [ -f "$1" ] || { printf '%s\n' "$USAGE"; exit 2; }

if [ "$TERM" = "linux" ]; then
    _SEDCMD='s/.*\*color\([0-9]\{1,\}\).*#\([0-9a-fA-F]\{6\}\).*/\1 \2/p'
    for i in $(sed -n "$_SEDCMD" "$1" | awk '$1 < 16 {printf "\\e]P%X%s", $1,
$2}'); do
        echo -en "$i"
    done
    clear
fi

