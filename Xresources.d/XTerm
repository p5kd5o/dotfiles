*VT100*faceSize5: 19
*VT100*faceSize6: 20

*VT100*forceBoxChars: true
*VT100*renderFont: true
*VT100*showMissingGlyphs: true

! -- Scrolling -- 

xterm*fastScroll: true
xterm*jumpScroll: true
xterm*multiScroll: true
xterm*saveLines: 10000
xterm*scrollBar: false
xterm*scrollKey: true
xterm*scrollTtyOutput: false

! -- Bell --

xterm*bellIsUrgent: true
xterm*bellSuppressTime: 144
xterm*visualBell: true
xterm*visualBellDelay: 0
xterm*visualBellLine: true

! -- Mappings --

xterm*translations: #override                                       \n\
Ctrl Shift <Key> C: copy-selection(CLIPBOARD)                       \n\
Ctrl Shift <Key> V: insert-selection(CLIPBOARD)                     \n\
Ctrl Shift <Key> P: dabbrev-expand()                                \n\
Ctrl Shift <Key> S: secure()                                        \n\
Ctrl Shift <Key> O: exec-formatted("xdg-open '%t'", PRIMARY)        \n\
Ctrl Shift <Btn1Up>:exec-formatted("google-chrome '%t'", PRIMARY)   \n\
Ctrl <Key> +:       larger-vt-font()                                \n\
Ctrl <Key> -:       smaller-vt-font() 


! vim:ft=xdefaults
