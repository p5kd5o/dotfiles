"\C-@":         set-mark
"\M-\C-e":      shell-expand-line
"\M-q":        start-kbd-macro
"\M-&":          tilde-expand
"\C-t":         transpose-chars
"\M-t":          transpose-words
"\C-_":         undo
"\C-u":         unix-line-discard
"\M-u":          upcase-word
"\C-w":         vi-unix-word-rubout
"\C-y":         yank
"\M-.":          yank-last-arg
"\M-_":          yank-last-arg
"\M-\C-y":      yank-nth-arg
"\M-y":          yank-pop



