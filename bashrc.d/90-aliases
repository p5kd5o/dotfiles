alias ydla='youtube-dl \
  --extract-audio \
  --audio-quality 0 \
  --console-title \
  --format '"'"'bestaudio/best'"'"' \
  --output '"'"'~/.cache/%(title)s.%(ext)s'"'"' \
  --geo-bypass \
  --ignore-errors \
  --playlist-random \
  --min-sleep-interval 1 \
  --max-sleep-interval 7 \
  --add-metadata \
  --metadata-from-title \
  '"'"'^((?P<artist>.+?)\s+-\s+((?P<album>.+)\s+-\s+)?)?(?P<title>.+?)$'"'"' \
  --exec '"'"'mv -bv {} ~/Music/"$(sed -E '"'"'"'"'"'"'"'"'
    s/\s+/_/g
    s/__+/_/g
    s/--+/-/g
    s/-_-/-/g
    s/_-_/./g
    s/-\././g
'"'"'"'"'"'"'"'"' <<<{})" 2>/dev/null'"'"

alias creds='gpg -d /crypt/patrick/creds.gpg'
