! Xresources.d/URxvt : URxvt config

! extensions
URxvt.perl-ext-common: default,matcher,font-size

! icon
URxvt.iconFile: /usr/share/icons/Humanity/apps/128/gnome-terminal.svg
! cursor
URxvt.cursorBlink: true

! fonts
URxvt.font: \
xft:FantasqueSansMono Nerd Font-16:style=Regular, \
xft:SpaceMono Nerd Font-14:style=Regular, \
xft:mononoki Nerd Font-14:style=Regular, \
xft:FiraCode Nerd Font-14:style=Retina, \
xft:SauceCodePro Nerd Font-14:style=Regular, \
xft:Ubuntu Mono-14:style=Regular

URxvt.boldFont: \
xft:FantasqueSansMono Nerd Font-16:style=Bold, \
xft:SpaceMono Nerd Font-14:style=Bold, \
xft:mononoki Nerd Font-14:style=Bold, \
xft:FiraCode Nerd Font-14:style=Bold, \
xft:SauceCodePro Nerd Font-14:style=Semibold,Regular, \
xft:Ubuntu Mono-14:style=Bold

URxvt.italicFont: \
xft:FantasqueSansMono Nerd Font-16:style=Italic, \
xft:SpaceMono Nerd Font-14:style=Italic, \
xft:mononoki Nerd Font-14:style=Italic, \
xft:FiraCode Nerd Font-14:style=Retina, \
xft:SauceCodePro Nerd Font-14:style=Medium Italic,Italic, \
xft:Ubuntu Mono-14:style=Italic

URxvt.boldItalicFont: \
xft:FantasqueSansMono Nerd Font-16:style=Bold Italic, \
xft:SpaceMono Nerd Font-14:style=Bold Italic, \
xft:mononoki Nerd Font-14:style=BoldItalic, \
xft:FiraCode Nerd Font-14:style=Retina, \
xft:SauceCodePro Nerd Font-14:style=Semibold Italic,Italic, \
xft:Ubuntu Mono-14:style=Bold Italic

! spacing
URxvt.letterSpace: -1

! glyphs 
URxvt.skipBuiltinGlyphs: true

! bell
URxvt.urgentOnBell: True
URxvt.visualBell:   True
!
! scrolling
URxvt.saveLines:          32768
URxvt.scrollBar:          False
URxvt.scrollstyle:        rxvt
URxvt.scrollTtyKeypress:  true
URxvt.scrollTtyOutput:    false
URxvt.scrollWithBuffer:   true

! clickable URLs
URxvt.url-launcher:   /usr/bin/xdg-open
URxvt.underlineURLs:  True
URxvt.matcher.button: 1

! disable printing terminal contents with PrtSc
URxvt.print-pipe: "cat 1> /dev/null 2>&1"

! disable ctrl-shift bindings
URxvt.iso14755:     false
URxvt.iso14755_52:  false

! scroll up/down using shift-up/shift-down
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! open and list recent URLs via keyboard
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

! bind arrowkeys + modifiers to xterm sequences
URxvt.keysym.Shift-Right:               \033[1;2C
URxvt.keysym.Shift-Left:                \033[1;2D
URxvt.keysym.Meta-Up:                   \033[1;3A
URxvt.keysym.Meta-Down:                 \033[1;3B
URxvt.keysym.Meta-Right:                \033[1;3C
URxvt.keysym.Meta-Left:                 \033[1;3D
URxvt.keysym.Meta-Shift-Up:             \033[1;4A
URxvt.keysym.Meta-Shift-Down:           \033[1;4B
URxvt.keysym.Meta-Shift-Right:          \033[1;4C
URxvt.keysym.Meta-Shift-Left:           \033[1;4D
URxvt.keysym.Control-Up:                \033[1;5A
URxvt.keysym.Control-Down:              \033[1;5B
URxvt.keysym.Control-Right:             \033[1;5C
URxvt.keysym.Control-Left:              \033[1;5D
URxvt.keysym.Control-Shift-Up:          \033[1;6A
URxvt.keysym.Control-Shift-Down:        \033[1;6B
URxvt.keysym.Control-Shift-Right:       \033[1;6C
URxvt.keysym.Control-Shift-Left:        \033[1;6D
URxvt.keysym.Control-Meta-Up:           \033[1;7A
URxvt.keysym.Control-Meta-Down:         \033[1;7B
URxvt.keysym.Control-Meta-Right:        \033[1;7C
URxvt.keysym.Control-Meta-Left:         \033[1;7D
URxvt.keysym.Control-Meta-Shift-Up:     \033[1;8A
URxvt.keysym.Control-Meta-Shift-Down:   \033[1;8B
URxvt.keysym.Control-Meta-Shift-Right:  \033[1;8C
URxvt.keysym.Control-Meta-Shift-Left:   \033[1;8D

! vim: ft=xdefaults
