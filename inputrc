#
## GNU readline 7.0 initialization
#


## 8-bit / Meta

set convert-meta                  off

set input-meta                    on

set output-meta                   on



## Style / Appearance

set bell-style                    none

set blink-matching-paren          on

set colored-completion-prefix     on

set colored-stats                 on

set mark-symlinked-directories    on

set show-mode-in-prompt           on



## Completion

set completion-ignore-case        on

set completion-query-items        192

set menu-complete-display-prefix  on

set show-all-if-ambiguous         on

set show-all-if-unmodified        on

set skip-completed-text           on



## History

set history-preserve-point        on

set history-size                  32767

set revert-all-at-newline         on



## Vi Editing Mode

set editing-mode                  vi

set keyseq-timeout                89

set vi-ins-mode-string            "\1\e[0;1;2m\2+\1\e[0m\2"

set vi-cmd-mode-string            "\1\e[0;1;2m\2:\1\e[0m\2"



## Mapping for the vi-insert keymap
set keymap      vi-insert

## Enter vi-movement mode with 'Ctl-Alt-[' or 'Alt-Esc'
"\e":           vi-movement-mode

## Insert a newline (022)
"\C-j":         "\C-v\C-j"

## Read enough chars to consume a multibyte control sequence
"\e[":          skip-csi-sequence
"\eOP"         "${READLINE_LINE} --help\C-m"
"\C-i":         menu-complete
"\M-\C-i":      menu-complete-backward
"\M-[Z":        dynamic-complete-history
"\M-[5~":       reverse-search-history
"\M-[6~":       forward-search-history
"\M- ":          magic-space
"\C-m":         accept-line
"\M-OD":         backward-char
"\M-[D":         backward-char
"\M-\C-OD":     backward-char
"\M-\C-[D":     backward-char
"\C-b":         backward-char
"\C-h":         backward-delete-char
"\C-?":         backward-delete-char
"\M-\C-h":      backward-kill-word
"\M-\C-?":      backward-kill-word
"\M-\M-[D":      shell-backward-word
"\M-[1;5D":      shell-backward-word
"\M-[5D":        shell-backward-word
"\M-b":          backward-word
"\M-<":          beginning-of-history
"\M-OH":         beginning-of-line
"\M-[H":         beginning-of-line
"\C-a":         beginning-of-line
"\M-[1~":        beginning-of-line
"\M-[7~":        beginning-of-line
"\M-[200~":      bracketed-paste-begin
"\M-@\M-@":         call-last-kbd-macro
"\M-c":          capitalize-word
"\C-]":         character-search
"\M-\C-]":      character-search-backward
"\C-l":         clear-screen
"\M-!":          complete-command
"\M-/":          complete-filename
"\M-@":          complete-hostname
"\M-{":          complete-into-braces
"\M-~":          complete-username
"\M-$":          complete-variable
"\M-<":          copy-backward-word
"\M->":          copy-forward-word
"\C-d":         delete-char
"\M-[3~":        delete-char
"\M-\\":         delete-horizontal-space
"\M--":          digit-argument
"\M-0":          digit-argument
"\M-1":          digit-argument
"\M-2":          digit-argument
"\M-3":          digit-argument
"\M-4":          digit-argument
"\M-5":          digit-argument
"\M-6":          digit-argument
"\M-7":          digit-argument
"\M-8":          digit-argument
"\M-9":          digit-argument
"\C-x\C-v":     display-shell-version
"\M-l":          downcase-word
