! Xresources.d/URxvt : URxvt config

! extensions
URxvt.perl-ext-common: default,matcher,font-size

! cursor
URxvt.cursorBlink: true

! fonts
URxvt.font: \
xft:Monofur Nerd Font Mono-16:style=Book, \
xft:Fantasque Sans Mono-16:style=Regular, \
xft:JetBrainsMono Nerd Font Mono-16:style=Regular, \
xft:mononoki Nerd Font Mono-16:style=Regular, \
xft:SauceCodePro Nerd Font Mono-15:style=Regular, \
xft:SpaceMono Nerd Font Mono-16:style=Regular, \
xft:Ubuntu Mono-16:style=Regular

URxvt.boldFont: \
xft:Monofurbold Nerd Font Mono-16:style=bold, \
xft:Fantasque Sans Mono-16:style=Bold, \
xft:JetBrainsMono Nerd Font Mono-16:style=Bold, \
xft:mononoki Nerd Font Mono-16:style=Bold, \
xft:SauceCodePro Nerd Font Mono-15:style=Semibold,Regular, \
xft:SpaceMono Nerd Font Mono-16:style=Bold, \
xft:Ubuntu Mono-16:style=Bold

URxvt.italicFont: \
xft:Monofuritalic Nerd Font Mono-16:style=italic, \
xft:Fantasque Sans Mono-16:style=Italic, \
xft:JetBrainsMono Nerd Font Mono-16:style=Italic, \
xft:mononoki Nerd Font Mono-16:style=Italic, \
xft:SauceCodePro Nerd Font Mono-15:style=Medium Italic,Italic, \
xft:SpaceMono Nerd Font Mono-16:style=Italic, \
xft:Ubuntu Mono-16:style=Italic

URxvt.boldItalicFont: \
xft:HeavyData Nerd Font-16, \
xft:Fantasque Sans Mono-16:style=Bold Italic, \
xft:JetBrainsMono Nerd Font Mono-16:style=Bold Italic, \
xft:SauceCodePro Nerd Font Mono-15:style=Semibold Italic,Italic, \
xft:SpaceMono Nerd Font Mono-16:style=Bold Italic, \
xft:Ubuntu Mono-16:style=Bold Italic

URxvt.skipBuiltinGlyphs: True

URxvt.letterSpace: 0

URxvt.cutchars: "[]{}()<>|*;,'"

URxvt.internalborder: 0

! scrolling
URxvt.saveLines:          16384
URxvt.scrollBar:          False
URxvt.scrollstyle:        rxvt
URxvt.scrollTtyKeypress:  true
URxvt.scrollTtyOutput:    false
URxvt.scrollWithBuffer:   true

! clickable URLs
URxvt.url-launcher:   /usr/bin/xdg-open
URxvt.underlineURLs:  True
URxvt.matcher.button: 1

! terminal bells
URxvt.urgentOnBell: True
URxvt.visualBell:   True

! disable printing terminal contents with PrtSc
URxvt.print-pipe: "cat 1> /dev/null 2>&1"

! disable ctrl-shift bindings
URxvt.iso14755:     false
URxvt.iso14755_52:  false

! scroll up/down using shift-up/shift-down
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! open and list recent URLs via keyboard
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

! bind arrowkeys and modifiers to xterm sequences (ugh...)
URxvt.keysym.Shift-Right:               \033[1;2C
URxvt.keysym.Shift-Left:                \033[1;2D
URxvt.keysym.Meta-Up:                   \033[1;3A
URxvt.keysym.Meta-Down:                 \033[1;3B
URxvt.keysym.Meta-Right:                \033[1;3C
URxvt.keysym.Meta-Left:                 \033[1;3D
URxvt.keysym.Meta-Shift-Up:             \033[1;4A
URxvt.keysym.Meta-Shift-Down:           \033[1;4B
URxvt.keysym.Meta-Shift-Right:          \033[1;4C
URxvt.keysym.Meta-Shift-Left:           \033[1;4D
URxvt.keysym.Control-Up:                \033[1;5A
URxvt.keysym.Control-Down:              \033[1;5B
URxvt.keysym.Control-Right:             \033[1;5C
URxvt.keysym.Control-Left:              \033[1;5D
URxvt.keysym.Control-Shift-Up:          \033[1;6A
URxvt.keysym.Control-Shift-Down:        \033[1;6B
URxvt.keysym.Control-Shift-Right:       \033[1;6C
URxvt.keysym.Control-Shift-Left:        \033[1;6D
URxvt.keysym.Control-Meta-Up:           \033[1;7A
URxvt.keysym.Control-Meta-Down:         \033[1;7B
URxvt.keysym.Control-Meta-Right:        \033[1;7C
URxvt.keysym.Control-Meta-Left:         \033[1;7D
URxvt.keysym.Control-Meta-Shift-Up:     \033[1;8A
URxvt.keysym.Control-Meta-Shift-Down:   \033[1;8B
URxvt.keysym.Control-Meta-Shift-Right:  \033[1;8C
URxvt.keysym.Control-Meta-Shift-Left:   \033[1;8D

! vim: ft=xdefaults
