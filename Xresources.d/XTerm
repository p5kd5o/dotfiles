! Xresources.d/XTerm: XTerm config

! -- Term --

xterm.termName: xterm-256color
xterm*ttyModes: erase ^?

! -- Window --

xterm*allowWindowOps: true
xterm*signalInhibit: true
xterm*tekInhibit: true

! -- Locale --

*VT100.utf8: true
xterm*utf8Title: true

! -- Keyboard --

xterm*backarrowKey: false
xterm*metaSendsEscape: true
!xterm*altIsNotMeta: true
!xterm*altSendsEscape: true

! -- 8-Bit --

xterm*eightBitControl: false
xterm*eightBitInput: true
xterm*eightBitOutput: true
!xterm*eightBitMeta: false

! -- Selections --

xterm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48
xterm*on2Clicks: regex [[:alpha:]]+://([[:alnum:]!#+,./=?@_~-]|(%[[:xdigit:]][[:xdigit:]]))+
xterm*on3Clicks: word
xterm*on4Clicks: line
xterm*on5Clicks: group

! -- Clipboard --

xterm*cutNewline: false
xterm*selectToClipboard: false
xterm*trimSelection: true

! -- Video --

*VT100*colorMode: true
*VT100*colorAttrMode: true
*VT100*dynamicColors: true
*VT100*showBlinkAsBold: true
*VT100*veryBoldColors: 6

! -- Cursor --

xterm*cursorBlink: true
xterm*cursorOffTime: 610
xterm*cursorOnTime: 987

! -- Fonts --

*VT100.font:  -misc-fixed-medium-r-normal--15-*-100-100-*-*-iso10646-1
*VT100.font1: -misc-fixed-medium-r-normal--10-*-100-100-*-*-iso10646-1
*VT100.font2: -misc-fixed-medium-r-normal--12-*-100-100-*-*-iso10646-1
*VT100.font3: -misc-fixed-medium-r-normal--14-*-100-100-*-*-iso10646-1
*VT100.font4: -misc-fixed-medium-r-normal--16-*-100-100-*-*-iso10646-1
*VT100.font5: -misc-fixed-medium-r-normal--18-*-100-100-*-*-iso10646-1
*VT100.font6: -misc-fixed-medium-r-normal--20-*-100-100-*-*-iso10646-1

*VT100*utf8Fonts.font:  -*-terminus-medium-*-*-*-14-*-*-*-*-*-iso10646-1
*VT100*utf8Fonts.font1: -*-terminus-medium-*-*-*-8-*-*-*-*-*-iso10646-1
*VT100*utf8Fonts.font2: -*-terminus-medium-*-*-*-10-*-*-*-*-*-iso10646-1
